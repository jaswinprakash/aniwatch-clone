{
    "expo": {
        "name": "AnimPlay",
        "slug": "AnimPlay",
        "version": "1.0.4",
        "orientation": "portrait",
        "icon": "./assets/images/ap.png",
        "scheme": "animplay",
        "userInterfaceStyle": "dark",
        "newArchEnabled": true,
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.animplay",
            "requireFullScreen": true
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/images/ap.png",
                "backgroundColor": "#ffffff"
            },
            "edgeToEdgeEnabled": true,
            "package": "com.animplay"
        },
        "web": {
            "bundler": "metro",
            "output": "static",
            "favicon": "./assets/images/favicon.png"
        },
        "plugins": [
            "expo-router",
            [
                "expo-splash-screen",
                {
                    "image": "./assets/images/splash.png",
                    "imageWidth": 400,
                    "resizeMode": "contain",
                    "backgroundColor": "#0a1929"
                }
            ],
            [
                "expo-screen-orientation",
                {
                    "initialOrientation": "PORTRAIT"
                }
            ],
            [
                "expo-build-properties",
                {
                    "android": {
                        "enableProguardInReleaseBuilds": true,
                        "enableShrinkResourcesInReleaseBuilds": true,
                        "useLegacyPackaging": true,
                        "usesCleartextTraffic": true
                    },
                    "ios": {}
                }
            ],
            ["expo-web-browser", [{ "experimentalLauncherActivity": true }]],
            ["react-native-google-cast"],
            [
                "@react-native-google-signin/google-signin",
                {
                    "iosUrlScheme": "com.googleusercontent.apps.473935740233-ao2prlvnb0b68csriousq0sml4o21hkf"
                }
            ]
        ],
        "experiments": {
            "typedRoutes": true
        }
    }
}
